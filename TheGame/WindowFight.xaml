<Window x:Class="TheGame.WindowFight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheGame"
        mc:Ignorable="d"
        Title="WindowFight" Height="450" Width="800">
    <Grid>
        <Image Source="/FightMenu.png" Stretch="Fill"/>
        <Button Content="Button" HorizontalAlignment="Center" Height="268" Margin="0,117,0,0" VerticalAlignment="Top" Width="268" Background="{x:Null}" Click="Button_Click"/>
        <Button x:Name="BtnTawern" Content="Back to Tawern" HorizontalAlignment="Left" Height="41" Margin="10,10,0,0" VerticalAlignment="Top" Width="168" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red" FontFamily="Brush Script MT" FontSize="25"/>
        <Button x:Name="BtnTawern_Копировать" Content="Back to Tawern" HorizontalAlignment="Left" Height="41" Margin="10,10,0,0" VerticalAlignment="Top" Width="168" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red" FontFamily="Brush Script MT" FontSize="25"/>
        <Label Content="Score" HorizontalAlignment="Left" Height="41" Margin="533,10,0,0" VerticalAlignment="Top" Width="161" Background="{x:Null}" Foreground="White" FontFamily="Brush Script MT" FontSize="27"/>

    </Grid>
</Window>
