<Window x:Class="TheGame.WindowShop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheGame"
        mc:Ignorable="d"
        Title="WindowShop" Height="450" Width="800">
    <Grid>
        <Image Source="/ShopMenu.png" Stretch="Fill"/>
        <Button x:Name="BtnBuy" Content="Button" HorizontalAlignment="Left" Height="285" Margin="442,139,0,0" VerticalAlignment="Top" Width="238" Background="{x:Null}" BorderBrush="White"/>
        <Border x:Name="BtnForFight" BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Height="285" Margin="92,139,0,0" VerticalAlignment="Top" Width="230"/>

    </Grid>
</Window>
